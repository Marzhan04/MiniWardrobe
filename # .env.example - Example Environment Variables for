# .env.example - Example Environment Variables for Flask project

# Database URL (Connection string for your database)
DATABASE_URL=sqlite:///db.sqlite3  # Change this if using a different DB like PostgreSQL or MySQL

# API Base URL
API_BASE_URL=http://localhost:5000  # Base URL for your API server

# JWT Secret Key
JWT_SECRET=your_jwt_secret_key  # Used for signing JWT tokens

# Flask Secret Key (For sessions and CSRF protection)
FLASK_SECRET_KEY=your_flask_secret_key  # Use a strong random key

# Debug Mode (True for development)
FLASK_DEBUG=True  # Set to False in production

# Mail Server (if you need email functionality)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password

